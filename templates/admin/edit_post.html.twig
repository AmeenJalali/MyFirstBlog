{% extends 'admin/admin_base.html.twig' %}

{% set title = "Edit post" %}
{% block title %}{{ title }}{% endblock %}

{% block main %}

    <div class="container">
        <div class="row">
            <div class="offset-sm-2 col-sm-8">
                <form class="form-horizontal" action="" method="post">

                    <div class="form-group">
                        <label class="control-label" for="email">Post title:</label>
                        <input type="text" class="form-control" placeholder="Enter post title" name="post_title" value="{{ post.post_title }}">
                    </div>


                    <div class="form-group">
                        <label for="post_description">Post description:</label>
                        <textarea class="form-control" placeholder="Enter post description" name="post_description" rows="15" id="post_description">{{ post.post_description }}</textarea>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-12 text-center">
                            <button type="submit" name="saveChanges" class="btn btn-outline-dark btn-lg">Save changes</button>
                        </div>
                    </div>

                </form>
                {% autoescape false %}
                    {% if errors|length != 0 %}
                        <div class="alert alert-danger" role="alert">{{ errors }}</div>

                    {% endif %}
                    {% if success|length != 0 %}
                        <div class="alert alert-success" role="alert">{{ success }}</div>
                    {% endif %}
                {% endautoescape %}
            </div>
        </div>
    </div>


{% endblock %}

